<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorError">@color/red</item>

        <item name="editTextStyle">@style/ishoupbud_editText</item>
        <item name="android:labelTextSize">12sp</item>
    </style>

    <style name="ishoupbud_editText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="btnBorder" parent="Widget.AppCompat.Button.Borderless">
        <!--<item name="android:textColor">@drawable/border_button_text_color</item>-->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="btnFlat" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/flat_button_corner</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="btn_dialog" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/light_green</item>
        <item name="android:background">@drawable/dialog_button</item>
    </style>

    <style name="vendor_radioButton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/dark_green</item>
    </style>

</resources>