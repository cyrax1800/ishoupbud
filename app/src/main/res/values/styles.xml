<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/brown</item>
        <item name="textColorError">@color/red</item>

        <item name="editTextStyle">@style/ishoupbud_editText</item>
        <item name="android:labelTextSize">12sp</item>
    </style>

    <style name="ishoupbud_editText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.MainBar" >
    </style>

    <style name="btnCustom">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/brown</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="btnProfile">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/profile_button</item>
        <item name="android:textAlignment">2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="btnBorder" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/light_green</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="btnFlat" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/flat_button_corner</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="btn_flat_brown" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/flat_button_corner_brown</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="btn_flat_full" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/flat_button_full</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="product_card">
        <item name="android:background">@color/white</item>
    </style>

    <style name="product_card_title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="product_card_price">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/star</item>
    </style>

    <style name="dialogRatingBAr" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/star</item>
        <item name="colorControlActivated">@color/light_green</item>
    </style>

    <style name="review_name">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="review_desc">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ishoupbud_text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ishoupbud_text_black" parent="ishoupbud_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ishoupbud_text_link" parent="ishoupbud_text">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ishoupbud_title_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="btn_stepper" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/light_green</item>
        <item name="android:background">@drawable/flat_button_corner</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="edit_text_stepper" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/stepper_background</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="btn_flat_brown_no_capes" parent="btn_flat_brown">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btn_flat_no_caps" parent="btn_flat_full">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btn_border_no_caps" parent="btnBorder">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="spinner_style" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="box_edittext">
        <item name="android:background">@drawable/edit_text_box</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="btn_dialog" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/light_green</item>
        <item name="android:background">@drawable/dialog_button</item>
    </style>

    <style name="vendor_radioButton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_button</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
