<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/brown</item>
        <item name="textColorError">@color/red</item>

        <item name="editTextStyle">@style/ishoupbud_editText</item>
        <item name="android:labelTextSize">12sp</item>
    </style>

    <style name="ishoupbud_editText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.MainBar" >
    </style>

    <style name="btnCustom">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/brown</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="btnBorder" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/light_green</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="btnFlat" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/flat_button_corner</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="product_card">
        <item name="android:background">@color/white</item>
    </style>

    <style name="product_card_title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="product_card_price">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/star</item>
    </style>

    <style name="review_name">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="review_date">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="review_desc">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ishoupbud_text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ishoupbud_text_black" parent="ishoupbud_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ishoupbud_text_link" parent="ishoupbud_text">
        <item name="android:textColor">@color/blue</item>
    </style>

</resources>
