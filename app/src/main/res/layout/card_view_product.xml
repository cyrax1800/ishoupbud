<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    card_view:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="@dimen/item_space"
    android:layout_marginLeft="@dimen/item_space"
    android:layout_marginRight="@dimen/item_space"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/item_space"
        style="@style/product_card"
        >

        <ImageView
            android:id="@+id/iv_card_product_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/comingsoon"
            android:layout_marginBottom="@dimen/item_space"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_card_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:paddingLeft="@dimen/item_space"
            android:paddingRight="@dimen/item_space"
            style="@style/product_card_title"
            android:text="One Finger"
            />

        <TextView
            android:id="@+id/tv_card_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            style="@style/product_card_price"
            android:paddingLeft="@dimen/item_space"
            android:paddingRight="@dimen/item_space"
            android:text="Rp. 10.000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/item_space"
            android:paddingRight="@dimen/item_space"
            >

            <RatingBar
                android:id="@+id/rating_bar_card_product"
                android:theme="@style/RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="2.4"
                android:stepSize="0.01"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                />

            <TextView
                android:id="@+id/tv_rate_value_card_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="(3.5)"
                style="@style/product_card_title"
                />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
